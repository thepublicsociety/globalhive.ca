<%= render :partial => "layouts/admin_header" %>
<h1>Listing sections</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Active</th>
    <th></th>
    <th></th>
  </tr>

<% @sections.each do |section| %>
  <tr>
    <td><%= section.title %></td>
    <td><%= section.body.blank? ? "" : section.body.truncate_html(100, at_end="&hellip;").html_safe %></td>
    <td><%= section.active %></td>
    <td><%= link_to 'Edit', edit_section_path(section) %></td>
    <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Section', new_section_path %>
