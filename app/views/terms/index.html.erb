<%= render :partial => "layouts/admin_header" %>
<h1>Listing terms</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Definition</th>
    <th>Active</th>
    <th></th>
    <th></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.name %></td>
    <td><%= term.definition.blank? ? "" : term.definition.truncate_html(200, at_end="&hellip;").html_safe %></td>
    <td><%= term.active %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Term', new_term_path %>
